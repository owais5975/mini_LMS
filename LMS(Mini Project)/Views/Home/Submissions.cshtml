@model IEnumerable<LMS_Mini_Project_.Models.Submission_tbl>

@{
    ViewBag.Title = "Submissions";
    Layout = "~/Views/Layout/_CommonLayout.cshtml";
}

<style>
    .Nonehover {
        pointer-events: none;
    }
    #ShowData{
        text-decoration:none;
    }
</style>
<h2 class="text-center my-5">Submissions</h2> 

<div class="container table-responsive">
    <table class="table table-hover">
        @{
            if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5" class="Nonehover">No Submission</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @{
                                string test = item.Sub_File_path.Replace("~/Files/", " ");
                                <a href="/Home/Show/@item.Sub_Id" id="ShowData">@test</a>
                            }
                            @*@Html.DisplayFor(modelItem => item.Sub_File_path)*@
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Sub_Date_Time)
                        </td>
                        <td class="text-center">
                            <span class="badge bg-success my-auto">@item.Sub_Status</span>
                            @*@Html.DisplayFor(modelItem => item.Sub_Status)*@
                        </td>
                        <td class="text-center">
                            <a href="/Home/Unsubmit/@item.Sub_Id" class="btn btn-sm btn-danger ">Unsubmit</a>
                        </td>
                    </tr>
                }
            }
        }
    </table>
</div>