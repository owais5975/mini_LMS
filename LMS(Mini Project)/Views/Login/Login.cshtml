@model LMS_Mini_Project_.Models.Student_tbl

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/_LoginLayout .cshtml";
}

<style>
    .form{
        display:flex;
        align-items:center;
        justify-content:center;
    }
    .form1{
        display:flex;
        align-items:center;
        justify-content:center;
        margin-top:8%;
    }
    .box{
        width: 300px;
    }
</style>

@Html.Raw(@ViewData["Status"])

<div class="form1">
    <img src="~/Images/login (1).png" />
</div>
<div class="form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mt-2">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.St_Email, new { htmlAttributes = new { @class = "form-control box", placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.St_Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-2">
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.St_Password,new { @class = "form-control box", placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.St_Password, "", new { @class = "text-danger" })
                    <div class="mt-1">
                        @Html.CheckBox("Show Password", new { onchange = "document.getElementById('St_Password').type = this.checked ? 'text' : 'password'" })<b><small>&nbsp;&nbsp;Show Password</small></b>
                    </div>
                </div>
            </div>


            <div class="form-group mt-4">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-success box" />
                </div>
            </div>
        </div>
    }
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
